<div id="contentContainer" class="trans3d">
  <section id="carouselContainer" class="trans3d">
    <% @planets.each_with_index do |planet, index| %>
      <figure id="item<%= index + 1 %>" class="planet trans3d" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path planet.photo, height: 300, width: 300, crop: :fill %>')">
        <div class="planetInner trans3d">
          <%= planet.name.downcase %>
        </div>
      </figure>
    <% end %>
  </section>
</div>
